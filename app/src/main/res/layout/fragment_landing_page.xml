<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LandingPageFragment">

    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/note" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="276dp"
        android:layout_height="60dp"
        android:layout_marginTop="84dp"
        android:gravity="center"
        android:text="Moveo Group"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="321dp"
        android:layout_height="144dp"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:text="It doesn't matter if it's Product, Branding, Design, or Coding - We do it all. Working in full sync to deliver the highest standards of technology and creativeness."
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/landing_page_login_btn"
        android:layout_width="231dp"
        android:layout_height="58dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_button"
        android:text="Log In"
        android:textColor="#FEFEFE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/landing_page_singup_btn"
        app:layout_constraintVertical_bias="0.053" />

    <Button
        android:id="@+id/landing_page_singup_btn"
        android:layout_width="231dp"
        android:layout_height="58dp"
        android:layout_marginTop="104dp"
        android:background="@drawable/custom_button"
        android:text="Sing Up"
        android:textColor="#FEFEFE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:rippleColor="#FFFFFF" />

</androidx.constraintlayout.widget.ConstraintLayout>